<div class="container">
	<div class="row">
		<%= render 'books/list', user: @user , book_new: @book_new %>
	    <div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
		    	<thead>
		       		<tr>
					    <th>image</th>
					    <th>name</th>
					    <th></th>
					    <th colspan="3"></th>
		    		</tr>
			  	</thead>
			  	<tbody>
			  	<% @users.each do |user| %>
		  	    　　　<tr>
		  	    	　　<td><%= attachment_image_tag user, :profile_image,:fill,50,50 , format: 'jpeg', fallback: "no_image.jpg" %>
		  	    	    </td>
		  	    	    <td><%= user.name %></td>
	  	  	            <td>フォロー数：<%= user.followings.count %></td>
	  	  	            <td>フォロワー数：<%= user.followers.count %></td>
	  	  	            <td>
	  	  	            	<%= render 'relationships/follow_button' ,user: user %>
	  	  	            </td>
	  	  	  　　　　　 <td><%= link_to  "Show" , "/users/#{user.id}" %></td>
		  	  	　　　</tr>
		  	  	<% end %>
		  	  </tbody>
		  	</table>
	    </div>
　　　</div>
</div>

